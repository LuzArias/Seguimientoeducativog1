@page
@using SegEducativo.App.Dominio
{
     
}
@model SegEducativo.App.Presentacion.Pages.Estudiantes.ActualizarModel
@{
}
<h1>Actualizar Estudiante</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="estudiante.Id"></label>
        <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>

     <div class="form-group">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control">
    </div>
      <div class="form-group">
        <label asp-for="estudiante.Apellidos"></label>
        <input asp-for="estudiante.Apellidos" class="form-control">
    </div>
         <div class="form-group">
        <label asp-for="estudiante.Direccion"></label>
        <input asp-for="estudiante.Direccion" class="form-control">
    </div>
           <div class="form-group">
        <label asp-for="estudiante.Ciudad"></label>
        <input asp-for="estudiante.Ciudad" class="form-control">
    </div>
         <div class="form-group">
        <label asp-for="estudiante.Correo"></label>
        <input asp-for="estudiante.Correo" class="form-control">
    </div>
     <div class="form-group">
        <label asp-for="estudiante.Celular"></label>
        <input asp-for="estudiante.Celular" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Genero"></label>
        <select asp-for="estudiante.Genero"asp-items="Html.GetEnumSelectList<Genero>()"class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.FechaNacimiento"></label>
        <input asp-for="estudiante.FechaNacimiento" class="form-control">
    </div>

    <button type="submit"class="btn btn-primary">Actualizar Estudiante</button>

</form>
